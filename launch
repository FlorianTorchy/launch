#Configuration interfaces:
> /etc/network/interfaces
echo # The loopback network interfaces >> /etc/network/interfaces
echo auto lo >> /etc/network/interfaces
echo iface lo inet loopback >> /etc/network/interfaces

echo # The primary network interfaces
echo auto eth0 >> /etc/network/interfaces
echo iface eth0 inet static >> /etc/network/interfaces
echo	address 10.1.6.150 >> /etc/network/interfaces
echo	netmask 255.255.255.0 >> /etc/network/interfaces
echo	gateway 10.1.6.1 >> /etc/network/interfaces

#restart:
systemctl restart networking.service

#Create a variable for change IP:
COUNTER=1
NETWORK=10.1.6
while [ $COUNTER -lt 254 ]
do
   if ping -c1 -w3 $NETWORK.$COUNTER >/dev/null 2>&1
   then
   COUNTER=$(( $COUNTER + 1 ))
   else
   IP=$NETWORK.$COUNTER
   COUNTER=254
   fi
done

#Change IP address with a variable:
> /etc/network/interfaces
echo # The loopback network interfaces >> /etc/network/interfaces
echo auto lo >> /etc/network/interfaces
echo iface lo inet loopback >> /etc/network/interfaces

echo # The primary network interfaces
echo auto eth0 >> /etc/network/interfaces
echo iface eth0 inet static >> /etc/network/interfaces
echo	address $IP >> /etc/network/interfaces
echo	netmask 255.255.255.0 >> /etc/network/interfaces
echo	gateway 10.1.6.1 >> /etc/network/interfaces

#Reset networkin service:
ifconfig eth0 0.0.0.0

#restart:
systemctl restart networking.service

#Create a variable for change IP:
COUNTER=1
NETWORK=10.1.6
while [ $COUNTER -lt 254 ]
do
   if ping -c1 -w3 $NETWORK.$COUNTER >/dev/null 2>&1
   then
   COUNTER=$(( $COUNTER + 1 ))
   else
   IP=$NETWORK.$COUNTER
   COUNTER=254
   fi
done

#configure WI-FI:

echo auto vlan0 >> /etc/network/interfaces
echo iface vlan0 inet static >> /etc/network/interfaces
echo  wpa-ssid TSSRARIEN >> /etc/network/interfaces
echo  wpa-psk P455Support >> /etc/network/interfaces
echo	address $IP >> /etc/network/interfaces
echo	netmask 255.255.255.0 >> /etc/network/interfaces
echo	gateway 10.1.6.1 >> /etc/network/interfaces

#restart:
systemctl restart networking.service

#install sudo:
apt install sudo

#Serveur Ntp:
> /etc/systemd/timesyncd.conf
echo [Time] >> >> /etc/systemd/timesyncd.conf
echo Servers=ntp.serveur1.fr ntp.serveur2.fr >> /etc/systemd/timesyncd.conf

#Configure Ntp:
sudo timedatectl set-ntp true

#Prepare for install:
apt install -y wget
wget --no-check-certificate https://github.com/NicolasVidal-Ch/Script-test/archive/004.tar.gz

#Unzip the archive:
tar xvf 004.tar.gz
chmod +x Script-test-004/test.sh
sh /Script-test-004/test.sh

#Configuration rsyslog.conf:
echo *.* @@10.1.6.13:514 >> /etc/rsyslog.conf
systemctl restart rsyslog.service
